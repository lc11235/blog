<%-include header%>
<%posts.forEach(function(post, index){%>
<p><h2><a href="/u/<%=post.name%>/<%=post.time.day%>/<%=post.title%>"><%=post.title%></a></h2></p>
<p class="info">
作者：<a href="/u/<%=post.name%>"><%=post.name%></a> <a href="/u/<%=post.name%>"><img src="<%=post.head%>" class="r_head" /></a>|
日期：<%=post.time.minute%>
标签：
<%if(Array.isArray(post.tags)){post.tags.forEach(function(tag, index){%>
    <%if(tag){%>
        <a class="tag" href="/tags/<%=tag%>"><%=tag%></a>
    <%}%>
<%})}%>
<% if (post.reprint_info != undefined) { %>
    <%if(post.reprint_info.reprint_from){%>
        <br><a href="/u/<%= post.reprint_info.reprint_from.name %>/<%= post.reprint_info.reprint_from.day %>/<%= post.reprint_info.reprint_from.title%>">原文</a>
    <% } %>
<% } %>
</p>
<p><%-post.post%></p>
<p class="info">阅读：<%=post.pv%>|
    评论：<%=Array.isArray(post.comments)?post.comments.length:0%>|
    转载：<%if(post.reprint_info != undefined){%>
            <%if(post.reprint_info.reprint_to){%>
                <%=post.reprint_info.reprint_to.length%>
            <%}else{%>
                <%=0%>
            <%}%>
        <%} else{%>
            <%=0%>
        <%}%>
</p>
<%})%>
<%-include paging%>
<%-include footer%>
